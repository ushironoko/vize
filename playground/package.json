{
  "name": "vize-playground",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxlint --fix",
    "build:wasm": "cd .. && cargo build --release -p vize_vitrine --no-default-features --features wasm --target wasm32-unknown-unknown && wasm-bindgen target/wasm32-unknown-unknown/release/vize_vitrine.wasm --out-dir playground/src/wasm --target web"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "monaco-editor": "^0.52.0",
    "prettier": "^3.7.4",
    "shiki": "^1.24.0",
    "typescript": "^5.7.0",
    "vue": "^3.5.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@esbuild"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "oxlint": "^0.16.0",
    "vite": "^7.3.1",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.3.0"
  }
}
